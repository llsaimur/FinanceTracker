@page
@model FinanceTrackerUI.Pages.Accounts.CreateModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded-4 p-4">
                <h2 class="text-center mb-4">Create Account</h2>

                @if (Model.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@Html.Raw(Model.ErrorMessage)</div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="CreateRequest.Name" class="form-label">Account Name</label>
                        <input asp-for="CreateRequest.Name" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="CreateRequest.Type" class="form-label">Account Type</label>
                        <select asp-for="CreateRequest.Type" class="form-select">
                            <option value="">-- Select Type --</option>
                            <option value="Chequing">Chequing</option>
                            <option value="Savings">Savings</option>
                            <option value="Trading">Trading</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CreateRequest.Balance" class="form-label">Initial Balance</label>
                        <input asp-for="CreateRequest.Balance" class="form-control" type="number" step="0.01" />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Create Account</button>
                    </div>

                    <div class="text-center mt-3">
                        <a asp-page="/Accounts/Index" class="btn btn-link">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
