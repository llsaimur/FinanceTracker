@page "{id}"
@model FinanceTrackerUI.Pages.Account.DeleteModel
@{
    ViewData["Title"] = "Delete Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm rounded-4 p-4">
                <h2 class="text-center text-danger mb-4">Delete Account</h2>

                @if (Model.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@Model.ErrorMessage</div>
                }

                <div class="alert alert-warning">
                    <strong>⚠️ Are you sure you want to delete this account?</strong>
                    <hr />
                    <p><strong>Account Name:</strong> @Model.Account.Name</p>
                    <p><strong>Account Type:</strong> @Model.Account.Type</p>
                    <p><strong>Balance:</strong> $@Model.Account.Balance.ToString("N2")</p>
                </div>

                <form method="post" class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                    <a asp-page="/Accounts/Index" class="btn btn-outline-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
